{
    "project":"gitlab",
    "services":[
        {
            "id":"frontend",
            "apps":[
                {
                    "id":"gitlab",
                    "domain":{
                        "uri":"$URI"
                    },
                    "mem":2048,
                    "image":"gitlab/gitlab-ce:8.10.8-ce.0",
                    "instances":1,
                    "port_mappings":[
                        {
                            "container_port":80
                        }
                    ],
                    "volumes":[
                        {
                            "container_path":"/etc/gitlab"
                        },
                        {
                            "container_path":"/var/opt/gitlab"
                        },
                        {
                            "container_path":"/var/log/gitlab"
                        }
                    ],
                    "env":{
                        "GITLAB_OMNIBUS_CONFIG":"external_url 'http://$URI';"
                    },
                    "health_checks":[
                        {
                            "timeout_seconds":10,
                            "interval_seconds":10,
                            "max_consecutive_failures":40,
                            "path":"/",
                            "type":"HTTP",
                            "grace_period_seconds":3
                        }
                    ]
                }
            ]
        }
    ]
}
