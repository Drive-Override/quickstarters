{
  "project": "rocketchat",
  "services": [
    {
      "id": "frontend",
      "apps": [
        {
          "id": "rocket",
          "domain": {
            "uri": "$URI"
          },
          "mem": 512,
          "image": "rocketchat/rocket.chat:0.61.0",
          "instances": 1,
          "volumes": [
            {
              "container_path": "/app/uploads",
              "size": "8GB"
            }
          ],
          "port_mappings": [
            {
              "container_port": 3000
            }
          ],
          "env": {
            "MONGO_URL": "mongodb://mongodb.backend.rocketchat/rocketchat",
            "ROOT_URL": "https://$URI"
          },
          "dependencies": [
            "../backend/mongodb"
          ]
        }
      ]
    },
    {
      "id": "backend",
      "apps": [
        {
          "id": "mongodb",
          "mem": 512,
          "image": "mongo:3.4.10",
          "cmd": "mongod --smallfiles",
          "instances": 1,
          "volumes": [
            {
              "container_path": "/data/db",
              "size": "8GB"
            },
            {
              "container_path": "/data/configdb",
              "size": "8GB"
            }
          ]
        }
      ]
    }
  ]
}
