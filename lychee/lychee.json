{
    "project":"lychee",
    "services":[
        {
            "id":"frontend",
            "apps":[
                {
                    "id":"apache",
                    "domain":{
                        "uri":"$URI"
                    },
                    "instances":1,
                    "mem":512,
                    "image":"mikemichel/lychee",
                    "port_mappings":[
                        {
                            "container_port":80
                        }
                    ],
                    "dependencies":[
                        "../backend/mysql"
                    ],
                    "volumes": [
                      {
                        "container_path": "/uploads"
                      }
                    ]
                }
            ]
        },
        {
            "id":"backend",
            "apps":[
                {
                    "id":"mysql",
                    "instances":1,
                    "mem":512,
                    "image":"mysql",
                    "env":{
                        "MYSQL_ROOT_PASSWORD":"$DBROOT",
                        "MYSQL_USER":"$DBUSER",
                        "MYSQL_PASSWORD":"$DBPASS",
                        "MYSQL_DATABASE":"lychee"
                    },
                    "volumes": [
                      {
                        "container_path": "/var/lib/mysql"
                      }
                    ]
                }
            ]
        }
    ]
}
