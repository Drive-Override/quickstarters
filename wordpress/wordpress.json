{
    "project":"wordpress",
    "services":[
        {
            "id":"frontend",
            "apps":[
                {
                    "id":"apache",
                    "domain":{
                        "uri":"$URI",
                        "type":"HTTP"
                    },
                    "instances":1,
                    "mem":512,
                    "image":"wordpress:4.2",
                    "port_mappings":[
                        {
                            "container_port":80
                        }
                    ],
                    "env":{
                        "WORDPRESS_DB_HOST":"mysql.backend.wordpress",
                        "WORDPRESS_DB_USER":"$DBUSER",
                        "WORDPRESS_DB_PASSWORD":"$DBPASS"
                    },
                    "dependencies":[
                        "../../backend/mysql"
                    ]
                }
            ]
        },
        {
            "id":"backend",
            "apps":[
                {
                    "id":"mysql",
                    "instances":1,
                    "mem":512,
                    "image":"mysql",
                    "port_mappings":[
                        {
                            "container_port":3306
                        }
                    ],
                    "env":{
                        "MYSQL_ROOT_PASSWORD":"$DBROOT",
                        "MYSQL_USER":"$DBUSER",
                        "MYSQL_PASSWORD":"$DBPASS",
                        "MYSQL_DATABASE":"wordpress"
                    },
                    "health_checks":[
                        {
                            "port_index":0,
                            "type":"TCP",
                            "grace_period_seconds":300,
                            "interval_seconds":10,
                            "timeout_seconds":20,
                            "max_consecutive_failures":4
                        }
                    ]
                }
            ]
        }
    ]
}
